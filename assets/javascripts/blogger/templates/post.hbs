{{#if isEditing}}
  {{partial "post/edit"}}
  <button {{action "doneEditing"}} class="btn btn-primary">Done</button>
{{else}}
  <button {{action "edit"}} class="btn btn-primary">Edit</button>
{{/if}}

<h1>{{model.title}}</h1>
<h2>by {{model.author.name}} <small class="text-muted">({{format-date model.date}})</small></h2>

<hr>

<div class="intro">
  {{format-markdown model.excerpt}}
</div>

<div class="below-the-fold">
  {{format-markdown model.body}}
</div>
